<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Cross browser testing suite">
    <listeners>
        <listener class-name="com.demowebshop.listeners.TestListener"/>
    </listeners>
    <test name="chrome test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.demowebshop.testscript.HomeTest">
                <methods>
                    <include name="TC_001_verifyHomePageTitle"/>
                    <include name="TC_002_verifySubscribeEmailMessage"/>
                </methods>
            </class>
            <class name="com.demowebshop.testscript.LoginTest">
                <methods>
                    <include name="TC001_verifyLoginPageTitle"/>
                    <include name="TC002_verifyValidLogin"/>
                    <include name="TC003_verifyInValidLoginErrorMessage"/>
                </methods>
            </class>
            <class name="com.demowebshop.testscript.RegisterTest">
                <methods>
                    <include name="TC001_verifyUserRegistration"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="edge test">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.demowebshop.testscript.HomeTest">
                <methods>
                    <include name="TC_001_verifyHomePageTitle"/>
                    <include name="TC_002_verifySubscribeEmailMessage"/>
                </methods>
            </class>
            <class name="com.demowebshop.testscript.LoginTest">
                <methods>
                    <include name="TC001_verifyLoginPageTitle"/>
                    <include name="TC002_verifyValidLogin"/>
                    <include name="TC003_verifyInValidLoginErrorMessage"/>
                </methods>
            </class>
            <class name="com.demowebshop.testscript.RegisterTest">
                <methods>
                    <include name="TC001_verifyUserRegistration"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>